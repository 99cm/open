<% size ||= :mini %>
<% itemprop ||= nil %>

<% if image_url = image.try(:url, size)  %>
  <% if image_alt = image.try(:alt) %>
    <%= image_tag image_url, alt: image_alt, itemprop: itemprop %>
  <% else %>
    <%= image_tag image_url, itemprop: itemprop %>
  <% end %>
<% else %>
  <span class="image-placeholder <%= size %>"></span>
<% end %>


<% content_for(:image_2) do %>

<% if @flag == 'yes' %>
	<% size = :large %>
<% else %>
	<% size = :product %>
<% end %>

<%#= controller.action_name %>

<%# size ||= :large %>
<% itemprop ||= nil %>
<%#= @flag %>
<% if image && image.attachment? %>
  <% if itemprop %>
    <%= image_tag image.attachment(:product), itemprop: itemprop %>
  <% else %>
    <%= image_tag image.attachment(:large) %>
  <% end %>
<% else %>
  <span class="image-placeholder <%= size %>"></span>
<% end %>

<% end %>
